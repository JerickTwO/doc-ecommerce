---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
---

<Layout title="Implementación - Perseo Ecommerce">
  <div class="flex min-h-screen bg-white">
    <Sidebar currentPage="implementacion" />

    <main class="flex-1 py-8 px-16 bg-gray-50 antialiased">
      <div class="mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Implementación</h1>

        <!-- Proceso de Implementación -->
        <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
          <div class="space-y-8">
            <div class="flex items-start space-x-4">
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-gray-900 mb-3">
                  Lanzamiento
                </h3>
                <p class="text-gray-700 mb-4">
                  Pruebas exhaustivas y puesta en producción con acompañamiento
                  completo.
                </p>
                <div class="p-4">
                  <h4 class="font-semibold mb-2">
                    Actividades de lanzamiento:
                  </h4>
                  <ul class="space-y-1">
                    <li>
                      • Pruebas de funcionalidad en ambiente de desarrollo
                    </li>
                    <li>• Validación de procesos de compra completos</li>
                    <li>
                      • Verificación de integraciones con sistemas externos
                    </li>
                    <li>• Capacitación del equipo administrativo</li>
                    <li>• Migración a producción y monitoreo inicial</li>
                    <li>• Soporte técnico durante las primeras semanas</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Información Adicional -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          <div class="bg-white rounded-lg shadow-sm p-8">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
              Tiempo de Implementación
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-gray-700">Carga de Productos</span>
                <span
                  class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm"
                  >1-2 días</span
                >
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-700">Personalización</span>
                <span
                  class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm"
                  >4-6 días</span
                >
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-700">Config. Pagos/Envíos</span>
                <span
                  class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm"
                  >1-2 días</span
                >
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-700">Lanzamiento</span>
                <span
                  class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm"
                  >1-2 días</span
                >
              </div>
              <div class="border-t pt-3 mt-4">
                <div class="flex justify-between items-center font-semibold">
                  <span class="text-gray-900">Tiempo Total</span>
                  <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full"
                    >7-13 días</span
                  >
                </div>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-8">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
              Soporte Incluido
            </h3>
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <div class="bg-green-500 rounded-full p-1 mt-1">
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">
                    Capacitación Completa
                  </h4>
                  <p class="text-gray-600 text-sm">
                    Entrenamiento para tu equipo en el uso de la plataforma
                  </p>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <div class="bg-green-500 rounded-full p-1 mt-1">
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">
                    Soporte Técnico 24/7
                  </h4>
                  <p class="text-gray-600 text-sm">
                    Asistencia técnica disponible durante el lanzamiento
                  </p>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <div class="bg-green-500 rounded-full p-1 mt-1">
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">
                    Documentación Detallada
                  </h4>
                  <p class="text-gray-600 text-sm">
                    Manuales de usuario y guías de administración
                  </p>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <div class="bg-green-500 rounded-full p-1 mt-1">
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">
                    Actualizaciones Gratuitas
                  </h4>
                  <p class="text-gray-600 text-sm">
                    Mejoras y nuevas Implementación sin costo adicional
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Call to Action -->
